
<%= render 'shared/errors', obj: @article %>

 <%# for scope provide the model you are working with and its path %>
<%= form_with scope: :articles_v2s, url: articles_v2s_path, local: true do |form| %>
  <p> 
    <%= form.label :title %><br/> 
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br/> 
    <%= form.text_area :description %> 
  </p>
  <p>
    <%= form.submit %> 
  </p>
<% end %>