
<%= render 'shared/errors', obj: @article %>

 <%# for scope provide the model you are working with and its path %>
<%= form_with scope: :articles_v2s, url: articles_v2s_path, local: true do |form| %>
  <p> 
    <%= form.label :title %><br/> 
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br/> 
    <%= form.text_area :description %> 
  </p>

  <div class="form-group row">
    <%= form.label :category, class: "col-2 col-form-label text-light" %>
    <div class="col-10"> 
      <%= form.collection_select(:category_ids, Category.all, :id, :name,
      { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
    </div>
  </div>

  <p>
    <%= form.submit %> 
  </p>
<% end %>